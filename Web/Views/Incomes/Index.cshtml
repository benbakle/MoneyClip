@model IEnumerable<MoneyClip.Models.Income>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layouts/_Master.cshtml";
}

<div class="mc-container">

   <h1>Income</h1>

    <p>
        @Html.ActionLink("New", "Create", "Incomes")

    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>@Html.DisplayNameFor(model => model.Amount)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @String.Format("{0:C}", item.Amount)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Incomes", new { id = item.IncomeID }, null) |
                        @Html.ActionLink("Delete", "Delete", "Incomes", new { id = item.IncomeID }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    Total Income: @String.Format("{0:C}", ViewBag.Total)

</div>

